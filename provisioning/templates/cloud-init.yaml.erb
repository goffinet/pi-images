#cloud-config
# vim: syntax=yaml
#
---
hostname: <%= host %>.pi.jeef.me
manage_etc_hosts: true

users:
- name: nick
  gecos: "Nick Miller"
  sudo: ALL=(ALL) NOPASSWD:ALL
  shell: /bin/bash
  groups: users,docker,video,input
  passwd: fake
  lock_passwd: false
  ssh_pwauth: true
  chpasswd: {expire: true}
  ssh-authorized-keys:
  - <%= File.read(File.expand_path('~/.ssh/id_rsa.pub')).chomp %>

locale: "en_US.UTF-8"
timezone: "America/New_York"
